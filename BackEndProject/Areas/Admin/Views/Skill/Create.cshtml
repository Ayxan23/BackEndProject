@model SkillViewModel
@{
    ViewData["Title"] = "Skill Create";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Skill Create</h4>

                    <form class="forms-sample" method="post" enctype="multipart/form-data">                     
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input class="form-control" asp-for="Name" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Rate">Rate</label>
                            <input class="form-control" asp-for="Rate" placeholder="Rate">
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>                      
                        <div class="form-group">
                            <label for="TeacherId">Teachers</label>
                            <select class="form-control" asp-for="TeacherId">
                                <option value="">Select</option>
                                @foreach (Teacher teacher in ViewBag.Teachers)
                                {
                                    <option value="@teacher.Id">@teacher.FullName, @teacher.Job</option>
                                }
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

