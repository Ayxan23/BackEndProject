@model List<Blog>
@{
    ViewData["Title"] = "Blog";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blogs</h4>
                    <div class="table-responsive">
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var blog in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="~/assets/img/blog/@blog.Image" />
                                        </td>
                                        <td>@blog.Name</td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@blog.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id=@blog.Id>Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id=@blog.Id>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
