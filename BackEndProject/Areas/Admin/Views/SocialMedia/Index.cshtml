@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMedias";
}
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">SocialMedias</h4>
                    <div class="table-responsive">
                        <a class="btn btn-primary" asp-action="Create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ClassName</th>
                                    <th>Link</th>

                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var socialMedia in Model)
                                {
                                    <tr>
                                        <td>@socialMedia.ClassName</td>
                                        <td>@socialMedia.Link</td>
                                        <td>
                                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@socialMedia.Id">Detail</a>
                                            <a class="btn btn-warning" asp-action="Update" asp-route-id=@socialMedia.Id>Update</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id=@socialMedia.Id>Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
