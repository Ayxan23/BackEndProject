@model SocialMediaViewModel
@{
    ViewData["Title"] = "SocialMedia Create";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">SocialMedia Create</h4>

                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="ClassName">Name</label>
                            @*  <input class="form-control" asp-for="ClassName" placeholder="ClassName">*@
                            <select class="form-control" asp-for="ClassName">
                                <option value="">Select</option>
                                <option value="zmdi zmdi-facebook">Facebook</option>
                                <option value="zmdi zmdi-linkedin">Linkedin</option>
                                <option value="zmdi zmdi-instagram">Instagram</option>
                                <option value="zmdi zmdi-twitter">Twitter</option>
                            </select>
                            <span asp-validation-for="ClassName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Link">Link</label>
                            <input class="form-control" asp-for="Link" placeholder="Link">
                            <span asp-validation-for="Link" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="TeacherId">Teachers</label>
                            <select class="form-control" asp-for="TeacherId">
                                <option value="">Select</option>
                                @foreach (Teacher teacher in ViewBag.Teachers)
                                {
                                    <option value="@teacher.Id">@teacher.FullName, @teacher.Job</option>
                                }
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Create</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

