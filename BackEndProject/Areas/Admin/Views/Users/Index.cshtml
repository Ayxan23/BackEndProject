@model List<AllUserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>
                    <div class="table-responsive">
                       @* <a class="btn btn-primary" asp-action="Create">Create</a>*@
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>IsActive</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Username</td>
                                        <td>@user.Email</td>
                                        <td>@user.IsActive</td>
                                        <td>@user.Role</td>
                                        <td>
                                          @*  <a class="btn btn-success" asp-action="Detail" asp-route-id="@user.Id">Detail</a>*@
                                            <a class="btn btn-warning" asp-action="ChangeRole" asp-route-id=@user.Id>Change Role</a>
                                            <a class="btn btn-danger" asp-action="ChangeActivity" asp-route-id=@user.Id>Change Activity</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
