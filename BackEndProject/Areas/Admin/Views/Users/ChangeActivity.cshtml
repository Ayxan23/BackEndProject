@model UserActiveViewModel
@{
    ViewData["Title"] = "Change Activity";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Change Activity</h4>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="IsActive">IsActive</label>
                            <select class="form-control" asp-for="IsActive">
                                <option value="@Model.IsActive">@Model.IsActive</option>                              
                                <option value="@(Model.IsActive ? "false" : "true")">@(Model.IsActive ? "False" : "True")</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-warning mr-2">Change Activity</button>
                        <a class="btn btn-light" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

