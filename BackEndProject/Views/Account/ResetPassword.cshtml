@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
@await Component.InvokeAsync("Banner", ViewData["Title"])
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Reset Password</h2>
                            <h4>Welcome back, @ViewBag.UserName</h4>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input asp-for="Password" placeholder=" Password">
                                <div><span asp-validation-for="Password" class="text-danger"></span></div>

                                <input asp-for="ConfirmPassword" placeholder=" Confirm Password">
                                <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>

                                <div class="button-box" style="display:flex; justify-content:center; width:100%">
                                    <button type="submit" class="default-btn">Change Password</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>