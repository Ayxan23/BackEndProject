@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}
@await Component.InvokeAsync("Banner", ViewData["Title"])
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Forgot Password</h2>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <input asp-for="Email" placeholder=" Email">
                                <div><span asp-validation-for="Email" class="text-danger"></span></div>          

                                <div class="button-box" style="display:flex; justify-content:center; width:100%">
                                    <button type="submit" class="default-btn">Send Link</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

