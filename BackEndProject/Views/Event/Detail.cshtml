@model Event
@{
    ViewData["Title"] = "Event Detail";
}
@await Component.InvokeAsync("Banner", ViewData["Title"])
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="event-details">
                    <div style="width:100%; height:auto;" class="event-details-img">
                        <img style="width:100%; height:auto;" src="~/assets/img/event/@Model.Image" alt="event-details">
                        <div class="event-date">
                            <h3>@Model.StartTime.ToString("dd")<span>@Model.StartTime.ToString("MMMM")</span></h3>
                        </div>
                    </div>
                    <div class="event-details-content">
                        <h2>@Model.Name</h2>
                        <ul>
                            <li><span>time:</span> @Model.StartTime.ToString("HH:mm tt") - @Model.EndTime.ToString("HH:mm tt")</li>
                            <li><span>venue:</span> @Model.Venue</li>
                        </ul>
                        <p>@Html.Raw(@Model.Description)</p>
                        <div class="speakers-area fix">
                            <h4>speakers</h4>
                            @foreach (var item in Model.EventSpeakers)
                            {
                                <div class="single-speaker">
                                    <div class="speaker-img" style="width:86px; height:86px;">
                                        <img style="width:100%; height:100%; object-fit:cover;" src="~/assets/img/event/@item.Speaker.Image" alt="speaker">
                                    </div>
                                    <div class="speaker-name">
                                        <h5>@item.Speaker.FullName</h5>
                                        <p>@item.Speaker.Job</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="reply-area">
